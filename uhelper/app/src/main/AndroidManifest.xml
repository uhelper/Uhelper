<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techdevcol.uhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.TutoresPorAsignatura"
            android:parentActivityName=".activities.DetalleAsignatura"></activity>
        <activity android:name=".activities.RegistroUsuarioActivity" />
        <activity android:name=".activities.RegistrarTutoriaActivity" />
        <activity
            android:name=".activities.DetalleAsignatura"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.AsignaturasActivity" />
        <activity
            android:name=".activities.RecordatorioActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.NotificacionesActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>